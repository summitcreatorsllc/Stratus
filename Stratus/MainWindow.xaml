<metro:MetroWindow x:Class="Stratus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:AmazonWebServicesHelper.Controls;assembly=AmazonWebServicesHelper"
        xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
        Title="Stratus Cloud Management" Height="350" Width="525" WindowStyle="ToolWindow" WindowState="Maximized">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White" />
        </Style>
    </Window.Resources>
    <Grid>
        <TabControl>
            <TabItem Header="dashboard">
                <controls:AwsServiceBrowser />
            </TabItem>
        </TabControl>
    </Grid>
</metro:MetroWindow>
